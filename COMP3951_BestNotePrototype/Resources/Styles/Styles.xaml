    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource Key_White_OffBlack}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{DynamicResource Key_White_OffBlack}" />
        <Setter Property="Shell.ForegroundColor" Value="{DynamicResource Key_Black_SecondaryDarkText}" />
        <Setter Property="Shell.TitleColor" Value="{DynamicResource Key_Black_SecondaryDarkText}" />
        <Setter Property="Shell.DisabledColor" Value="{DynamicResource Key_Gray200_Gray950}" />
        <Setter Property="Shell.UnselectedColor" Value="{DynamicResource Key_Gray200_Gray200}" />
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{DynamicResource Key_White_Black}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{DynamicResource Key_Magenta_White}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{DynamicResource Key_Magenta_White}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{DynamicResource Key_Gray900_Gray200}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{DynamicResource NavBackground}" />
        <Setter Property="BarTextColor" Value="{DynamicResource NavText}" />
        <Setter Property="IconColor" Value="{DynamicResource Key_Gray200_White}" />
        
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{DynamicResource Key_White_Gray950}" />
        <Setter Property="BarTextColor" Value="{DynamicResource Key_Magenta_White}" />
        <Setter Property="UnselectedTabColor" Value="{DynamicResource Key_Gray200_Gray950}" />
        <Setter Property="SelectedTabColor" Value="{DynamicResource Key_Gray950_Gray200}" />
    </Style>

    <Style x:Key="PaneBorderStyle"
           TargetType="Border">
        <Setter Property="BackgroundColor" 
                Value="{DynamicResource BorderBackground}" />

        <Setter Property="Stroke"
                Value="#474747" />
        <Setter Property="StrokeThickness"
                Value="2" />

        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="5" />
            </Setter.Value>
        </Setter>

        <Setter Property="Padding"
                Value="8" />
    </Style>
</ResourceDictionary>
