<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BestNote_3951.Views"
    x:Class="BestNote_3951.MainPage">

    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
        <!-- Markdown Editor in top left -->
        <views:MarkdownEditorView Grid.Row="0" Grid.Column="0" />

        <!-- Markdown Renderer in top right -->
        <views:MarkdownRendererView Grid.Row="0" Grid.Column="1" />

        <!-- Embedded PDF in bottom left -->
        <views:EmbeddedPdfView Grid.Row="1" Grid.Column="0" />

        <!-- File Structure in bottom right -->
        <views:FileStructureView Grid.Row="1" Grid.Column="1" />
    </Grid>
</ContentPage>
