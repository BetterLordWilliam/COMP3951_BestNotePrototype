<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"
             x:Class="BestNote_3951.Views.EmbeddedPdfView"
             >
    
        
        <!-- UI goes all up in here -->
    
    <!-- This part is not working!!!
    <ContentView.BindingContext>
        <local:EmbeddedPdfViewModel x:Name="viewModel" />
    </ContentView.BindingContext>-->

    <VerticalStackLayout HorizontalOptions="Center" WidthRequest="200">
        <ScrollView HorizontalScrollBarVisibility="Always"
                    Orientation="Both">

            <HorizontalStackLayout x:Name="Toolbar">
                <Label
                    FontSize="Medium"
                    Text="Open PDF"
                    TextColor="Black"
                    VerticalOptions="Center"/>

                <ImageButton x:Name="openFile"
                             Margin="10,10,10,10"
                             Clicked="openFile_Clicked"
                             HeightRequest="40"
                             Source="dotnet_bot.png"
                             VerticalOptions="Center"
                             WidthRequest="40" />

            </HorizontalStackLayout>
        </ScrollView>
        <syncfusion:SfPdfViewer x:Name="pdfViewer"
                                HeightRequest="500" 
                                IsOutlineViewVisible="True"
                                ShowScrollHead="True"  
                                DocumentSource="{Binding PdfDocumentStream}"/>

    </VerticalStackLayout>

